        <script>
            function valId() {
                chif = document.getElementById("chif").value;
                elec = document.getElementById("elec").value;
                assu = document.getElementById("assu").value;
                habi = document.getElementById("habi").value;
                fonc = document.getElementById("fonc").value;
                mena = document.getElementById("mena").value;
                pisc = document.getElementById("pisc").value;
                camp = document.getElementById("camp").value;
                dive = document.getElementById("dive").value;

                tab = []
                
                add = Number(elec) + Number(assu) + Number(habi) + Number(fonc) + Number(mena) + Number(pisc) + Number(camp) + Number(dive);
                benef = Number(chif) - Number(add)
                
                tab.push("Chiffre d'affaire: " + chif + "€");
                tab.push("Facture électrique: " + elec + "€");
                tab.push("Facture d'assurance: " + assu + "€");
                tab.push("Taxe d'habitation: " + habi + "€");
                tab.push("Taxe foncière: " + fonc + "€");
                tab.push("Facture de ménage: " + mena + "€");
                tab.push("Entretien de la piscine: " + pisc + "€");
                tab.push("Entretien de la campagne: " + camp + "€");
                tab.push("Frais divers: " + dive + "€");
                tab.push("Total des frais: " + add + "€");
                tab.push("Bénéfice: " + benef + "€");
                result.innerHTML = '';
                text = "";
                for (let i = 0; i < tab.length; i++) {
                    text += tab[i] + "<br>";
                }
                document.getElementById("result").innerHTML = text;
            }
            function fra() {
                var n = prompt("Combien de frais divers avez vous eu?");
                var somme = 0;
                for (var i = 0; i < n; i++) {
                    var x = prompt("Entrez un des frais divers.");
                    somme += Number(x);
                }
                alert("La somme des frais divers est: " + somme + "€; " + " Copiez-coller le résultat.");
            }
        </script>
