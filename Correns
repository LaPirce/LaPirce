            <h1>Comptes de Correns</h1>

            <fieldset>
                <label class="numb">Chiffre d'affaire: <input id="chif" type="number"/></label><br>
                <label class="numb">Facture d'électricité: <input id="elec" type="number"/></label><br>
                <label class="numb">Facture d'assurance: <input id="assu" type="number"/></label><br>
                <label class="numb">Taxe d'habitation: <input id="habi" type="number"/></label><br>
                <label class="numb">Taxe foncière: <input id="fonc" type="number"/></label><br>
                <label class="numb">Facture de ménage: <input id="mena" type="number"/></label><br>
                <label class="numb">Entretien de la piscine: <input id="pisc" type="number"/></label><br>
                <label class="numb">Entretien de la campagne: <input id="camp" type="number"/></label><br>
                <label class="numb">Frais divers(<button onclick="fra()" class="arf">faire l'addition</button>): <input id="dive" type="number"/></label><br><br>

                <button onclick="valId()" class="butt">Faire le calcul!</button>
            </fieldset>
            <br><br>
            <fieldset>
                <h2>Résultat:</h2>
                <p id="result" class="pp"></p>
